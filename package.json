{
  "name": "rephrase-app",
  "version": "1.0.0",
  "description": "System-wide text rephrasing app with AI",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "make": "electron-forge make",
    "package": "electron-forge package",
    "build-win": "electron-builder --win portable"
  },
  "build": {
    "appId": "com.rephrase.app",
    "productName": "RePhrase",
    "directories": {
      "output": "out/win-build"
    },
    "win": {
      "target": "portable",
      "icon": "assets/icon.png"
    },
    "files": [
      "src/**/*",
      "package.json"
    ]
  },
  "keywords": [
    "rephrase",
    "ai",
    "text",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.0.0",
    "@electron-forge/maker-dmg": "^7.0.0",
    "@electron-forge/maker-squirrel": "^7.0.0",
    "@electron-forge/maker-zip": "^7.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^26.4.0"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}